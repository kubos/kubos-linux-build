/dts-v1/;

/ {
	description = "KubOS Linux Kernel Package";
	#address-cells = <1>;

	images {
		kernel@1 {
			data = /incbin/("./../../../../buildroot-2016.11/output/images/zImage");
			type = "kernel";
			arch = "arm";
			os = "linux";
			compression = "none";
			load = <0x21880000>;
			entry = <0x21880000>;
			hash@1 {
				algo = "crc32";
			};
		};
	};

	configurations {
		default = "config@1";
		config@1 {
			description = "Boot Linux kernel";
			kernel = "kernel@1";
		};
	};
};
